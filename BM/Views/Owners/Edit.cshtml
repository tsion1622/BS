@model BM.Models.Owner

@{
    ViewData["Title"] = "Edit Owner";
}

<h1>Edit Owner</h1>

<h4>Owner Details</h4>
<hr />
<div class="row">
    <div class="col-md-6"> <!-- Adjusted column for better layout -->
        <form id="editForm" asp-action="Edit" onsubmit="return confirmSave();">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" required />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OwnershipTypeId" class="control-label"></label>
                <select asp-for="OwnershipTypeId" class="form-control" asp-items="ViewBag.OwnershipTypeId" required></select>
                <span asp-validation-for="OwnershipTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tin" class="control-label"></label>
                <input asp-for="Tin" class="form-control" required />
                <span asp-validation-for="Tin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DocumentId" class="control-label"></label>
                <select asp-for="DocumentId" class="form-control" asp-items="ViewBag.DocumentId" required></select>
                <span asp-validation-for="DocumentId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" asp-for="Verified" /> @Html.DisplayNameFor(model => model.Verified)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="RegisteredDate" class="control-label"></label>
                <input asp-for="RegisteredDate" class="form-control" type="date" required />
                <span asp-validation-for="RegisteredDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a> <!-- Styled Back button -->
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function confirmSave() {
            return confirm("Are you sure you want to save changes to this owner?");
        }
    </script>
}