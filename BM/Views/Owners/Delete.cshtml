@model BM.Models.Owner

@{
    ViewData["Title"] = "Delete Owner";
}

<h1>Delete Owner</h1>

<div class="alert alert-warning" role="alert">
    <strong>Warning!</strong> Deleting this owner is permanent and cannot be undone.
</div>

<h3>Are you sure you want to delete this owner?</h3>
<div>
    <h4>Owner Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Verified)
        </dt>
        <dd class="col-sm-10">
            @(Model.Verified ? "Yes" : "No") <!-- Clear boolean display -->
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RegisteredDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegisteredDate.ToString("yyyy-MM-dd")) <!-- Optional date formatting -->
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @(Model.IsActive ? "Yes" : "No") <!-- Clear boolean display -->
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsDeleted)
        </dt>
        <dd class="col-sm-10">
            @(Model.IsDeleted ? "Yes" : "No") <!-- Clear boolean display -->
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Document)
        </dt>
        <dd class="col-sm-10">
            @(Model.Document != null ? Html.DisplayFor(model => model.Document.Name) : "N/A") <!-- Null check for Document -->
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OwnershipType)
        </dt>
        <dd class="col-sm-10">
            @(Model.OwnershipType != null ? Html.DisplayFor(model => model.OwnershipType.Description) : "N/A") <!-- Null-safe display -->
        </dd>
    </dl>

    <form asp-action="Delete" onsubmit="return confirmDelete();">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this owner? This action cannot be undone.");
        }
    </script>
}