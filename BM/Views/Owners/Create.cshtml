@model BM.Models.Owner

@{
    ViewData["Title"] = "Create Owner";
}

<h1>Create Owner</h1>

<div class="alert alert-info" role="alert">
    Please fill in the details below to create a new owner.
</div>

<h4>Owner Details</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="OwnershipTypeId" class="control-label"></label>
                <select asp-for="OwnershipTypeId" class="form-control" asp-items="ViewBag.OwnershipTypeId"></select>
                <span asp-validation-for="OwnershipTypeId" class="text-danger"></span> <!-- Validation message -->
            </div>

            <div class="form-group">
                <label asp-for="Tin" class="control-label"></label>
                <input asp-for="Tin" class="form-control" />
                <span asp-validation-for="Tin" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DocumentId" class="control-label"></label>
                <select asp-for="DocumentId" class="form-control" asp-items="ViewBag.DocumentId"></select>
                <span asp-validation-for="DocumentId" class="text-danger"></span> <!-- Validation message -->
            </div>

            <div class="form-group form-check">
                <input class="form-check-input" asp-for="Verified" />
                <label class="form-check-label" for="@Html.IdFor(m => m.Verified)">
                    @Html.DisplayNameFor(model => model.Verified)
                </label>
            </div>

            <div class="form-group">
                <label asp-for="RegisteredDate" class="control-label"></label>
                <input asp-for="RegisteredDate" class="form-control" type="date" />
                <span asp-validation-for="RegisteredDate" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input class="form-check-input" asp-for="IsDeleted" />
                <label class="form-check-label" for="@Html.IdFor(m => m.IsDeleted)">
                    @Html.DisplayNameFor(model => model.IsDeleted)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}