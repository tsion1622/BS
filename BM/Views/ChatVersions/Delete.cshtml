@model BM.Models.ChatVersion

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Chat Version</h1>

<!-- New Warning Alert Section -->
<div class="alert alert-warning" role="alert">
    <strong>Warning:</strong> Deleting this item cannot be undone!
</div>

<h3>Are you sure you want to delete this Chat Version?</h3>
<div>
    <h4>Chat Version Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OldMessage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OldMessage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsDeleted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsDeleted)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Chat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Chat.Id)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>