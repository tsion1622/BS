@model IEnumerable<BM.Models.ChatVersion>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OldMessage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
