        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OldMessage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
