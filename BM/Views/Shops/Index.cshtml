        }

        .image-side {
            flex: 1;
            background: url('images\download (1).jpg') no-repeat center;
            background-size: cover;
            height: calc(100vh - 50px);
            border-radius: 10px 0 0 10px;
            position: relative;
            filter: brightness(70%);
        }

        .form-container {
