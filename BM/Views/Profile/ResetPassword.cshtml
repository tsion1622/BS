@model BM.Models.User

@{
    ViewData["Title"] = "Details";
}

@if (TempData["errr"] != null)
{
    <div class="error-message">@TempData["errr"]</div>
}
@if (TempData["rt"] != null)
{
    <div class="success-message">
        @TempData["rt"]
    </div>
}


<div class="form-container">
    <h2 class="text-center mb-4">Reset Password</h2>

    <form asp-action="ResetPassword" asp-controller="Profile" method="post">
        <div class="mb-3">
            <label for="verificationCode" class="form-label">Verification Code</label>
            <input type="text" name="verificationCode" id="verificationCode" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="email" id="email" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="newPassword" class="form-label">New Password</label>
            <input type="password" name="newPassword" id="newPassword" class="form-control" required />
        </div>
        <div class="mb-3">
            <label for="confirmPassword" class="form-label">Confirm Password</label>
            <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary w-100">Reset Password</button>
    </form>
</div>

<style>
    .form-container {
        max-width: 400px; /* Set a maximum width */
        margin: 50px auto; /* Center the form */
        padding: 30px;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
</style>