@model BM.Models.BuildingEmployee

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>BuildingEmployee</h4>
<hr />
<div class="card">
    <div class="card-header">
        Edit Building Employee
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label" title="Enter the full name of the employee."></label>
                        <input asp-for="FullName" class="form-control" title="Enter the full name of the employee." />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label" title="Enter the phone number of the employee."></label>
                        <input asp-for="PhoneNumber" class="form-control" title="Enter the phone number of the employee." />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BuildingId" class="control-label" title="Select the building associated with the employee."></label>
                        <select asp-for="BuildingId" class="form-control" asp-items="ViewBag.BuildingId" title="Select the building associated with the employee."></select>
                        <span asp-validation-for="BuildingId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserId" class="control-label" title="Select the user account for the employee."></label>
                        <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId" title="Select the user account for the employee."></select>
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EmployeeTypeId" class="control-label" title="Select the type of employee."></label>
                        <select asp-for="EmployeeTypeId" class="form-control" asp-items="ViewBag.EmployeeTypeId" title="Select the type of employee."></select>
                        <span asp-validation-for="EmployeeTypeId" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label" title="Check if the employee is currently active.">
                            <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                        </label>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label" title="Check if this employee is marked as deleted.">
                            <input class="form-check-input" asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}