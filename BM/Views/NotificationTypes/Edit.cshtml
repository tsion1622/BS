@model BM.Models.NotificationType

@{
    ViewData["Title"] = "Edit Notification Type";
}

<h1>Edit Notification Type</h1>

<h4>NotificationType</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input class="form-check-input" asp-for="IsActive" id="IsActive" />
                <label class="form-check-label" for="IsActive">
                    @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>

            <div class="form-group form-check">
                <input class="form-check-input" asp-for="IsDeleted" id="IsDeleted" />
                <label class="form-check-label" for="IsDeleted">
                    @Html.DisplayNameFor(model => model.IsDeleted)
                </label>
                @if (Model.IsDeleted)
                {
                    <div class="alert alert-warning mt-2">
                        This notification type is marked as deleted.
                    </div>
                }
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

<!-- Enhanced styles for the Edit page -->
<style>
    h1, h4 {
        color: #333;
    }

    .form-group label {
        font-weight: bold;
    }

    .btn-primary {
        margin-top: 10px;
    }

    .text-danger {
        font-weight: bold;
    }

    .form-check-label {
        margin-left: 5px;
    }

    .alert-warning {
        margin-top: 10px;
        font-weight: bold;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}