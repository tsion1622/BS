@model BM.Models.NotificationType

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>NotificationType</h4>
<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <!-- Centered the form on the page -->
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- New field for Description -->
          @*   <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div> *@

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a> <!-- Added a button for better UX -->
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<!-- New styles for the Create page -->
<style>
    h1, h4 {
        color: #333; /* Main text color */
    }

    .form-group {
        margin-bottom: 15px; /* Spacing between form groups */
    }

    .btn {
        margin-right: 5px; /* Add spacing between buttons */
    }
</style>