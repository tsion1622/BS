@model IEnumerable<BM.Models.NotificationType>

@{
    ViewData["Title"] = "Notification Types";
}

<h1>Notification Types</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<style>
    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .table th {
            background-color: #f2f2f2;
        }

        .table tr:hover {
            background-color: #f5f5f5;
        }

        .table a {
            color: #007bff;
            text-decoration: none;
        }

            .table a:hover {
                text-decoration: underline;
            }
</style>

<table class="table" role="table">
    <thead>
        <tr role="row">
            <th role="columnheader">
                Name
            </th>
            <th role="columnheader">
                Active
            </th>
            <th role="columnheader">
                Deleted
            </th>
            <th role="columnheader"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <tr role="row">
                    <td role="cell">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td role="cell">
                        @(item.IsActive ? "Yes" : "No") <!-- User-friendly display -->
                    </td>
                    <td role="cell">
                        @(item.IsDeleted ? "Yes" : "No") <!-- User-friendly display -->
                    </td>
                    <td role="cell">
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No Notification Types available.</td>
            </tr>
        }
    </tbody>
</table>