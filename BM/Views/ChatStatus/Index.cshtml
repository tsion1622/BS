@model IEnumerable<BM.Models.ChatStatus>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<!-- Help Button with Bootstrap styling -->
<button class="btn btn-info" onclick="toggleHelp()">Help</button>
<div id="helpText" style="display:none; margin-top:10px;">
    <p>This table displays all the Chat Statuses. You can create, edit, delete, or view details of each status.</p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDeleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDeleted)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function toggleHelp() {
        var helpText = document.getElementById("helpText");
        if (helpText.style.display === "none") {
            helpText.style.display = "block";
        } else {
            helpText.style.display = "none";
        }
    }
</script>

<style>
    /* New style for Help Button and links */
    .btn-info {
        margin-left: 10px;
    }

    .table a {
        margin-right: 5px;
    }
</style>