@model BM.Models.ChatStatus

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ChatStatus</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsDeleted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsDeleted)
        </dd>
    </dl>

    <form asp-action="Delete" onsubmit="return confirmDelete();">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this item? This action cannot be undone.");
        }
    </script>
}

<style>
    /* New styles for confirmation page */
    h3 {
        color: #dc3545; /* Set the heading color to Bootstrap's danger color */
    }

    dl.row {
        margin-bottom: 20px; /* Increase spacing below the description list */
    }

    .btn-danger {
        margin-right: 10px; /* Add margin to separate the delete button from the list button */
    }

    .btn-secondary {
        text-decoration: none; /* Remove underline from the Back to List link */
    }

        .btn-secondary:hover {
            background-color: #6c757d; /* Darker color on hover for better visibility */
            color: white; /* Ensure the text is visible when hovering */
        }
</style>