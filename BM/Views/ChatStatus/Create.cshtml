@model BM.Models.ChatStatus

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ChatStatus</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" id="chatStatusForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter chat status name" title="Please enter the name for the ChatStatus" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                <input type="button" value="Reset" class="btn btn-secondary" onclick="resetForm();" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-link">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function resetForm() {
            document.getElementById("chatStatusForm").reset();
        }
    </script>
}

<style>
    /* New styles for the Create page */
    .form-group {
        margin-bottom: 15px; /* Add more spacing between form groups */
    }

    .btn-lg {
        width: 100%; /* Make the create button full-width */
        margin-bottom: 10px; /* Add space below the Create button */
    }

    .btn-link {
        text-decoration: none; /* Remove underline from the Back to List link */
    }

        .btn-link:hover {
            text-decoration: underline; /* Underline on hover for better user feedback */
        }
</style>