@model BM.Models.ChatStatus

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ChatStatus</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsDeleted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsDeleted)
        </dd>
    </dl>

    <!-- Additional details section -->
    <button class="btn btn-info" onclick="toggleAdditionalDetails()">Show Additional Details</button>
    <div id="additionalDetails" style="display:none;">
        <h5>Additional Information</h5>
        <p>This section could contain extra information about the ChatStatus, if available.</p>
        <!-- You may replace the above text with @Html@* .DisplayFor(model => model.Description) *@ or any other property -->
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary" onclick="return confirm('Are you sure you want to go back to the list?')">Back to List</a>
</div>

@section Scripts {
    <script>
        function toggleAdditionalDetails() {
            var additionalDetails = document.getElementById("additionalDetails");
            if (additionalDetails.style.display === "none") {
                additionalDetails.style.display = "block";
            } else {
                additionalDetails.style.display = "none";
            }
        }
    </script>
}

<style>
    /* New styles for additional button and link */
    .btn-info {
        margin-top: 10px; /* Add space above the button */
    }

    .dl-row .col-sm-2 {
        font-weight: bold; /* Make the labels bold for better distinction */
    }

    .dl-row .col-sm-10 {
        line-height: 1.5; /* Improve line height for readability */
    }
</style>