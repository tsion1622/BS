@model BM.Models.Location

@{
    ViewData["Title"] = "Location Details";
}

<h1>Location Details</h1>

<!-- New Alert Banner -->
<div class="alert alert-info" role="alert">
    Below are the details of the selected location. If you identify any inaccuracies, please contact support.
</div>

<div class="card">
    <div class="card-body">
        <h4>Location Information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Coordinates)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Coordinates)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>
            <dd class="col-sm-10">
                @(Model.IsActive ? "Yes" : "No")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsDeleted)
            </dt>
            <dd class="col-sm-10">
                @(Model.IsDeleted ? "Yes" : "No")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class="col-sm-10">
                @(Model.City != null ? Html.DisplayFor(model => model.City.Name) : "N/A")
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a> <!-- Styled Edit button -->
    <a asp-action="Index" class="btn btn-secondary">Back to List</a> <!-- Styled Back button -->
</div>

@section Scripts {
    <script>
        // Optional: Add any scripts related to this view here.
    </script>
}