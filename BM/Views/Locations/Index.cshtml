@model IEnumerable<BM.Models.Location>

@{
    ViewData["Title"] = "Location List";
}

<h1>Location List</h1>

<!-- New Alert Banner -->
<div class="alert alert-info" role="alert">
    Here is the list of locations. You can create, edit, or delete entries as needed.
</div>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Location</a>
</p>

<table class="table table-striped table-responsive">
    <thead class="thead-dark">
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Coordinates)</th>
            <th scope="col" class="text-center">@Html.DisplayNameFor(model => model.IsActive)</th>
            <th scope="col" class="text-center">@Html.DisplayNameFor(model => model.IsDeleted)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.City)</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="6" class="text-center">No locations found.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Coordinates)</td>
                    <td class="text-center">@((item.IsActive) ? "Yes" : "No")</td>
                    <td class="text-center">@((item.IsDeleted) ? "Yes" : "No")</td>
                    <td>@Html.DisplayFor(modelItem => item.City.Name)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>