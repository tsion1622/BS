@model BM.Models.Location

@{
    ViewData["Title"] = "Edit Location";
}

<h1>Edit Location</h1>

<!-- New Alert Banner -->
<div class="alert alert-warning" role="alert">
    You are currently editing an existing location. Please ensure all details are correct. If unsure, contact your administrator.
</div>

<div class="card">
    <div class="card-body">
        <h4>Location Details</h4>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Name</label>
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Coordinates" class="control-label">Coordinates</label>
                        <input asp-for="Coordinates" class="form-control" required />
                        <span asp-validation-for="Coordinates" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CityId" class="control-label">City</label>
                        <select asp-for="CityId" class="form-control" asp-items="ViewBag.CityId" required>
                            <option value="">Select a city...</option> <!-- Placeholder -->
                        </select>
                        <span asp-validation-for="CityId" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check">
                        <input class="form-check-input" asp-for="IsActive" />
                        <label class="form-check-label" asp-for="IsActive">Is Active?</label>
                    </div>

                    <div class="form-group form-check">
                        <input class="form-check-input" asp-for="IsDeleted" />
                        <label class="form-check-label" asp-for="IsDeleted">Mark as Deleted?</label>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a> <!-- Styled Back button -->
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}