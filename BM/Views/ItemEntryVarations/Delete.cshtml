@model BM.Models.ItemEntryVaration

@{
    ViewData["Title"] = "Delete";
}

<h1>Confirm Deletion</h1>

<h3>Are you sure you want to delete this item?</h3>
<div>
    <h4>Item Variation Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @String.Format("{0:C}", Model.Price) <!-- Format as currency -->
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayName("Active Status")
        </dt>
        <dd class="col-sm-10">
            @(Model.IsActive ? "Yes" : "No") <!-- User-friendly boolean representation -->
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayName("Deleted Status")
        </dt>
        <dd class="col-sm-10">
            @(Model.IsDeleted ? "Yes" : "No") <!-- User-friendly boolean representation -->
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemEntry)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemEntry.Id)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Varation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Varation.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VarationType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VarationType.Name)
        </dd>
    </dl>

    <p class="text-danger">Warning: This action cannot be undone!</p>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a> <!-- Adding Cancel button for better UX -->
        </div>
    </form>
</div>