@model BM.Models.Item

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<!-- New Alert Banner -->
<div class="alert alert-info" role="alert">
    Please fill in the details below to create a new item.
</div>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="createForm" onsubmit="showLoading();">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter item name" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ItemCategoryId" class="control-label"></label>
                <select asp-for="ItemCategoryId" class="form-control" asp-items="ViewBag.ItemCategoryId" aria-describedby="itemCategoryHelp"></select>
                <small id="itemCategoryHelp" class="form-text text-muted">Select the category for the item.</small>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAvailable" aria-label="Is available" />
                    @Html.DisplayNameFor(model => model.IsAvailable)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDeleted" aria-label="Is deleted" />
                    @Html.DisplayNameFor(model => model.IsDeleted)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a> <!-- Styled button -->
</div>

@section Scripts {
    <script>
        function showLoading() {
            var form = document.getElementById('createForm');
            form.innerHTML += '<div class="spinner-border" role="status"><span class="visually-hidden">Loading...</span></div>';
        }
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}