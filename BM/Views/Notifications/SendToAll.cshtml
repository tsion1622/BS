@model SendNotificationRequest

<h1>Send Notification to All Users</h1>

<form asp-action="SendToAll" method="post">
    <div class="form-group">
        <label asp-for="Message"></label>
        <textarea asp-for="Message" class="form-control" rows="4"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="NotificationTypeId"></label>
        <select asp-for="NotificationTypeId" class="form-control" asp-items="ViewBag.NotificationTypeId"></select>
    </div>
    <input type="submit" value="Send Notification" class="btn btn-primary" />
</form>

<div>
    <a asp-action="Index">Back to Notifications</a>
</div>
